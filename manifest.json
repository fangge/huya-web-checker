{
  "name": "Huya Web Checker",
  "description": "Huya Web Checker",
  "version": "2.0",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.huya.com/*",
    "*://*.msstatic.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Huya Web Checker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.huya.com/*"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],
  "manifest_version": 3
}